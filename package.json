    "standard": "^11.0.0",
    "typescript": "^2.7.2"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.20",
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.48",
    "@types/node": "^7.0.60",
    "@types/sinon": "^4.3.1",
    "chai": "^4.1.2",
    "eslint-plugin-typescript": "^0.9.0",
    "mocha": "^5.0.1",
    "sinon": "^4.4.6",
    "snazzy": "^7.1.1",
    "ts-node": "^5.0.1",
    "typescript-eslint-parser": "^14.0.0"
  }
