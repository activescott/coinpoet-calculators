{
  "name": "coinpoet-calculators",
  "description": "A library to make various estimates related mining cryptocurrency including time to mine blocks and projecting future difficulty.",
  "version": "0.0.1",
  "repository": "https://github.com/activescott/coinpoet-calculators",
  "license": "MPL-2.0",
  "main": "dist/cjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "scripts": {
    "build": "rm -rfd ./dist; tsc",
    "start": "npm run test:live",
    "lint": "./node_modules/.bin/prettier --write ./**/*",
    "precommit": "pretty-quick --staged",
    "test": "nyc --reporter=html --reporter=text mocha --require ts-node/register 'test/**/*.{ts,tsx}'",
    "test:live": "./node_modules/.bin/mocha --watch --require ts-node/register --watch-extensions ts,tsx 'test/**/*.{ts,tsx}'",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "dependencies": {
    "@types/bigi": "^1.4.0",
    "@types/chai-as-promised": "^7.1.0",
    "bignumber.js": "^7.2.1",
    "bluebird": "^3.5.1",
    "cross-fetch": "^2.1.0",
    "lodash": "^4.17.5",
    "typescript": "^2.7.2"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.20",
    "@types/chai": "^4.1.2",
    "@types/lodash": "^4.14.116",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.0",
    "@types/sinon": "^4.3.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.2",
    "eslint-plugin-typescript": "^0.9.0",
    "husky": "^1.1.2",
    "mocha": "^5.0.1",
    "nyc": "^13.1.0",
    "prettier": "1.14.3",
    "pretty-quick": "^1.8.0",
    "sinon": "^4.4.6",
    "snazzy": "^7.1.1",
    "ts-node": "^5.0.1",
    "typescript-eslint-parser": "^14.0.0"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "coverage/**",
      "demo/**",
      "test-tools/**",
      "test/**",
      "dist/**"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
