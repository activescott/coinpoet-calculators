{
  "name": "coinpoet-cryptocurrency-mining-estimators",
  "description": "A library to make various estimates related mining cryptocurrency including time to mine blocks and projecting future difficulty.",
  "version": "0.0.1",
  "repository": "tbd",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "scripts": {
    "build": "rm -rfd ./dist; tsc",
    "start": "npm run test:live",
    "lint": "./node_modules/.bin/standard --verbose *.ts | ./node_modules/.bin/snazzy",
    "test": "./node_modules/.bin/mocha --require ts-node/register 'test/**/*.{ts,tsx}'",
    "test:live": "./node_modules/.bin/mocha --watch --require ts-node/register --watch-extensions ts,tsx 'test/**/*.{ts,tsx}'"
  },
  "standard": {
    "parser": "typescript-eslint-parser",
    "plugins": [
      "typescript"
    ]
  },
  "dependencies": {
    "@types/bigi": "^1.4.0",
    "bignumber.js": "^6.0.0",
    "bluebird": "^3.5.1",
