{
  "name": "coinpoet-calculators",
  "description": "A library to make various estimates related mining cryptocurrency including time to mine blocks and projecting future difficulty.",
  "homepage": "https://github.com/activescott/coinpoet-calculators",
  "version": "0.0.0",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "types": "dist/es/index.d.ts",
  "files": [
    "dist/"
  ],
  "author": {
    "name": "Scott Willeke",
    "email": "scott@willeke.com",
    "url": "https://scott.willeke.com/"
  },
  "repository": "https://github.com/activescott/coinpoet-calculators",
  "bugs": {
    "url": "https://github.com/activescott/coinpoet-calculators/issues"
  },
  "keywords": [
    "cryptocurrency",
    "blockchain",
    "zcash",
    "bitcoin"
  ],
  "license": "MPL-2.0",
  "scripts": {
    "build:cjs": "rm -rfd ./dist/cjs; tsc --project tsconfig.cjs.json",
    "build:es": "rm -rfd ./dist/es; tsc --project tsconfig.es.json",
    "build": "rm -rfd ./dist && yarn run build:es && yarn run build:cjs",
    "lint": "prettier -l \"{,!(node_modules)/**/}*.{ts,tsx,js,jsx,md,yml,json,html}\"",
    "lint-fix": "prettier --write \"{,!(node_modules)/**/}*.{ts,tsx,js,jsx,md,yml,json,html}\"",
    "test": "nyc --reporter=html --reporter=text mocha --require ts-node/register 'test/**/*.{ts,tsx}'",
    "test:live": "./node_modules/.bin/mocha --watch --require ts-node/register --watch-extensions ts,tsx 'test/**/*.{ts,tsx}'",
    "coverage": "yarn run test && nyc report --reporter=text-lcov | coveralls"
  },
  "dependencies": {
    "@activescott/diag-winston": "^1.0.1-beta.2",
    "bignumber.js": "^8.0.2",
    "bluebird": "^3.5.1",
    "cross-fetch": "^2.1.0",
    "lodash": "^4.17.13",
    "loglevel-debug": "^0.0.1",
    "typescript": "^4.0.2"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.20",
    "@types/chai": "^4.1.2",
    "@types/chai-as-promised": "^7.1.0",
    "@types/lodash": "^4.14.117",
    "@types/mocha": "^5.2.5",
    "@types/node": "^14.6.4",
    "@types/sinon": "^4.3.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.2",
    "eslint-plugin-typescript": "^0.9.0",
    "mocha": "^5.0.1",
    "nyc": "^13.1.0",
    "prettier": "1.14.3",
    "sinon": "^4.4.6",
    "snazzy": "^7.1.1",
    "ts-node": "^5.0.1"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "coverage/**",
      "demo/**",
      "test-tools/**",
      "test/**",
      "dist/**"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
